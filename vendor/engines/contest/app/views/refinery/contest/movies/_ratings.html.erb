<div class="modal hide fade" id="ratingsModal">
  <div class="modal-header">
    <a class="close" data-dismiss="modal">×</a>
    <h3>Hodnocení filmu <%= @movie.name %></h3>
  </div>
  <div class="modal-body">
    <table style="width: 100%">
      <thead>
        <tr>
          <th>Jméno</th>
          <th>Hodnocení</th>
          <th>Čas</th>
        </tr>
      </thead>
      <tbody>
        <% @movie.ratings.all.reverse.each do |rating| %>
        <tr>
          <td><%= rating.name %></td>
          <td><%= rating.value %></td>
          <td><%= rating.created_at.strftime("%d.%m.%Y") %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  <div class="modal-footer">
    <a data-dismiss="modal" href="#" class="btn">Zavřít</a>
  </div>
</div>
