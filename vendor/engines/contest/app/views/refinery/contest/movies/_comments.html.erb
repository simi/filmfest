<div class="modal hide fade" id="commentsModal">
  <div class="modal-header">
    <a class="close" data-dismiss="modal">×</a>
    <h3>Komentáře k filmu <%= @movie.name %></h3>
  </div>
  <div class="modal-body">
    <div class="comments">
      <h2>Komentáře</h2>
      <% @movie.comments.all.reverse.each do |comment| %>
        <div class="comment">
          <span class="name"><%= comment.name %></span><span class="date"><%= comment.created_at.strftime('%H:%M %d.%m.%Y') %></span>
          <div class="message"><%= comment.text %></div>
        </div>
        <% if refinery_user? %>
          <%= link_to 'Smazat', refinery.contest_comments_path(:id => comment), :method => :delete %>
          <% end %>
        <hr />
      <% end %>
    </div>
    </div>
    <div class="modal-footer">
      <a data-dismiss="modal" href="#" class="btn">Zavřít</a>
    </div>
  </div>
