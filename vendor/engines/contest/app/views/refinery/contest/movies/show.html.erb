<div class="row" id="movie">
  <div class="span8">
    <%= @movie.youtube_embed %>
    <h1><%= @movie.name %></h1>
    <h3>Anotace</h3>
    <p><%= @movie.anotation %></p>
    <h3>Kategorie</h3>
    <p><%= @movie.category.name %></p>
    <h3>Žánr</h3>
    <p><%= @movie.genre %></p>
    <h3>Režie</h3>
    <p><%= @movie.director %></p>
    <h3>Scénář</h3>
    <p><%= @movie.screenwriter %></p>
    <h3>Hrají</h3>
    <p><%= @movie.actors %></p>
    <h3>Rok výroby</h3>
    <p><%= @movie.year %></p>
    <h3>Věková kategorie</h3>
    <p><%= @movie.age_category %></p>
  </div>
  <div class="span4 text-align-justify panel">
    <%= render :partial => 'right_panel' %>
  </div>
</div>
