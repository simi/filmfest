<ul>
  <% if ::Refinery::Contest::Admin::MoviesController.searchable? %>
    <li>
      <%= render '/refinery/admin/search', :url => refinery.contest_admin_movies_path %>
    </li>
  <% end %>
  <li>
    <%= link_to t('.create_new'), refinery.new_contest_admin_movie_path,
                 :class => "add_icon" %>
  </li>
<% if !searching? && ::Refinery::Contest::Admin::MoviesController.sortable? && ::Refinery::Contest::Movie.any? %>
  <li>
    <%= link_to t('.reorder', :what => "Movies"),
                 refinery.contest_admin_movies_path,
                 :id => "reorder_action",
                 :class => "reorder_icon" %>

    <%= link_to t('.reorder_done', :what => "Movies"),
                 refinery.contest_admin_movies_path,
                 :id => "reorder_action_done",
                 :style => "display: none;",
                 :class => "reorder_icon" %>
  </li>
<% end %>
</ul>
